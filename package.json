{
  "name": "statuspage",
  "version": "1.0.0",
  "description": "Public status page for OpenClaw services",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "npm run build:server && vite build",
    "build:server": "tsc",
    "typecheck": "tsc --noEmit && tsc --noEmit -p src/tsconfig.json",
    "serve": "node dist/server/index.js",
    "test": "node --test tests/*.test.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "vite": "^5.1.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.7.3",
    "@types/node": "^22.10.5",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "tsx": "^4.19.2"
  }
}
